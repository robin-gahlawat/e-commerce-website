
<%- include('_layouts/header'); -%>


<div class="row products">

  <% products.forEach(function(p) { %>
    
    <div class="col-xa-12 col-md-4 p">
      <a class="pa" href="/products/<%= p.category %>/<%= p._id%>">
        <img class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
      </a>

      <h4><%= p.title %></h4>
      <h5>$<%= parseFloat(p.price).toFixed(2) %></h5>
      <a class="vd" href="/products/<%= p.category %>/<%= p._id %>">View Details</a>

    </div>

  <% }); %>



</div>


<%- include('_layouts/footer'); -%>