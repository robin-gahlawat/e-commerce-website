
<%- include('../_layouts/adminheader'); -%>


<h2 class="page-title">Add a newproduct</h2>
<a href="/admin/products" class="btn btn-primary">Back to products</a>


<form method="post" action="/admin/products/add_product" enctype="multipart/form-data">

  <br>
  <div class="form-group">
    <label for="">Title</label>
    <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
  </div>

  <div class="form-group">
    <label for="">Description</label>
    <textarea name="desc" id ="ta" class="form-control" cols="30" rows="7" placeholder="Description">
      <%= desc %>  
    </textarea>
  </div>

  <div class="form-group">
    <label for="">Category</label>
    <select name="category" class="form-select" >
      <% categories.forEach(function(cat){ %> 
        <option value="<%= cat.slug %>"><%= cat.title %></option> 
      <% }); %>
    </select>
      
  </div>

  <div class="form-group">
    <label for="">Price</label>
    <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="Price">
  </div>

  <div class="form-group">
    <label for="">Image</label>
    <input type="file" class="form-control" name="image" id="img"><br>
    <img src="#" id="imgPreview" class="img-thumbnail" alt="">
  </div>

  <br>
  <button class="btn btn-outline-dark" style= "position: absolute; right:8%"  >Submit</button><br>

</form>

<script>

    function readURL(input){
      if (input.files && input.files[0]) {
          var reader = new FileReader();
          reader.onload = function(e) {
            $("#imgPreview").attr('src', e.target.result).width(100).height(100);
          }
          reader.readAsDataURL(input.files[0]);
      }
    }

    $("#img").change(function(){
      readURL(this);
    });


</script>


<%- include('../_layouts/adminfooter'); -%>