
<%- include('../_layouts/adminheader'); -%>


<h2 class="page-title">Edit Category</h2>
<a href="/admin/categories" class="btn btn-primary">Back to all Categories</a>


<form method="post" action="/admin/categories/edit_category/<%= slug %>">

  <br><br>
  <div class="form-group">
    <label for="">Title</label>
    <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
  </div>

  <input type="hidden" name="id" value="<%= id %>">

  <br>
  <button class="btn btn-outline-dark" style= "position: absolute; right:8%"  >Save</button>


</form>


<%- include('../_layouts/adminfooter'); -%>