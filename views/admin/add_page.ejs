
<%- include('../_layouts/adminheader'); -%>


<h2 class="page-title">Add page</h2>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>


<form method="post" action="/admin/pages/add_page">

  <div class="form-group">
    <label for="">Title</label>
    <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
  </div>
  <div class="form-group">
    <label for="">Slug</label>
    <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Title">
  </div>
  <div class="form-group">
    <label for="">Content</label>
    <textarea name="content" id="ta" class="form-control" cols="30" rows="10" placeholder="Content">
      <%= content %>
    </textarea>
  </div>

  <br>
  <button class="btn btn-outline-dark" style= "position: absolute; right:8%"  >Submit</button>


</form>


<%- include('../_layouts/adminfooter'); -%>